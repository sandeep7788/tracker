<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:black="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="16dp"
            android:elevation="1dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_marginStart="21dp"
            android:layout_marginEnd="21dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:visibility="gone"
            black:srcCompat="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/background"
            android:scaleType="fitXY"/>


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="4dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.59000003">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="@dimen/txt_15sp"

                    android:background="@color/white"
                    android:backgroundTint="@color/white"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0">

                    <TextView
                        android:layout_marginTop="90dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:layout_marginStart="35dp"
                        android:fontFamily="@font/intel"
                        android:foregroundGravity="center"
                        android:text="Welcome to"
                        android:textColor="@color/text_color"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:layout_marginStart="35dp"
                        android:fontFamily="@font/intel"
                        android:foregroundGravity="center"
                        android:text="@string/app_name"
                        android:textColor="@color/text_color"
                        android:textSize="32dp"
                        android:textStyle="bold" />


                    <TextView
                        android:layout_marginTop="25dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:layout_marginStart="35dp"
                        android:fontFamily="@font/intel"
                        android:foregroundGravity="center"
                        android:text="Name:"
                        android:textColor="@color/text_color"
                        android:textSize="14dp"
                        android:layout_marginBottom="4dp"/>


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/l1"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="35dp"

                        android:layout_marginEnd="35dp"
                        android:background="@drawable/edit_txtbg"
                        android:clickable="true"
                        android:orientation="horizontal"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp">


                        <EditText
                            android:id="@+id/txt_username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:backgroundTint="@color/button_bg"
                            android:clickable="true"
                            android:maxLength="50"
                            android:fontFamily="@font/worksans_medium"
                            android:hint="@string/username"
                            android:textColorHint="@color/txt_hint"
                            android:gravity="center|start"
                            android:inputType="textPersonName"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_nev"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:layout_marginTop="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:layout_marginStart="35dp"
                        android:fontFamily="@font/intel"
                        android:foregroundGravity="center"
                        android:text="A Number:"
                        android:textColor="@color/text_color"
                        android:textSize="14dp"
                        android:layout_marginBottom="4dp"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/l2"
                        android:layout_width="match_parent"
                        android:layout_marginStart="35dp"
                        android:layout_marginLeft="35dp"

                        android:layout_marginEnd="35dp"
                        android:background="@drawable/edit_txtbg"
                        android:clickable="true"
                        android:orientation="horizontal"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:layout_height="50dp">

                        <EditText
                            android:id="@+id/txtANumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:backgroundTint="@color/button_bg"
                            android:clickable="true"
                            android:maxLength="50"
                            android:fontFamily="@font/worksans_medium"
                            android:hint="Enter your A number"
                            android:textColorHint="@color/txt_hint"
                            android:gravity="center|start"
                            android:inputType="number"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_nev"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:layout_marginTop="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:layout_marginStart="35dp"
                        android:fontFamily="@font/intel"
                        android:foregroundGravity="center"
                        android:text="BO Number:"
                        android:textColor="@color/text_color"
                        android:textSize="14dp"
                        android:layout_marginBottom="4dp"/>



                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/l3"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="35dp"
                        android:layout_marginLeft="35dp"
                        android:layout_marginEnd="35dp"
                        android:background="@drawable/edit_txtbg"
                        android:clickable="true"
                        android:orientation="horizontal"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp">

                        <EditText
                            android:id="@+id/txtBONumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColorHint="@color/txt_hint"
                            android:layout_marginStart="16dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginEnd="36dp"
                            android:layout_marginRight="36dp"
                            android:backgroundTint="@color/button_bg"
                            android:clickable="true"
                            android:fontFamily="@font/worksans_medium"
                            android:hint="Enter your BO number"
                            android:inputType="number"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_nev"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <TextView
                        android:layout_marginTop="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:layout_marginStart="35dp"
                        android:fontFamily="@font/intel"
                        android:foregroundGravity="center"
                        android:text="Mobile Number:"
                        android:textColor="@color/text_color"
                        android:textSize="14dp"
                        android:layout_marginBottom="4dp"/>



                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/l4"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="35dp"
                        android:layout_marginLeft="35dp"
                        android:layout_marginEnd="35dp"
                        android:background="@drawable/edit_txtbg"
                        android:clickable="true"
                        android:orientation="horizontal"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp">

                        <EditText
                            android:id="@+id/txtMobileNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColorHint="@color/txt_hint"
                            android:layout_marginStart="16dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginEnd="36dp"
                            android:layout_marginRight="36dp"
                            android:backgroundTint="@color/button_bg"
                            android:clickable="true"
                            android:fontFamily="@font/worksans_medium"
                            android:hint="@string/mobileNumber"
                            android:inputType="number"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_nev"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_sign_in"
                        android:layout_width="match_parent"
                        android:layout_height="51dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="36dp"
                        android:layout_marginTop="32dp"
                        android:layout_marginEnd="36dp"
                        android:background="@drawable/round_corner_shape"
                        android:backgroundTint="@color/theme_color2"
                        android:text="SEND OTP"
                        android:textColor="@color/button_bg"
                        android:fontFamily="@font/intel"/>


                    <TextView
                        android:layout_marginTop="32dp"
                        android:id="@+id/btn_privacyPolicy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/intel"
                        android:gravity="center|bottom"
                        android:paddingTop="2dp"
                        android:singleLine="true"
                        android:text="@string/privacyPolicy"
                        android:textColor="@color/theme_color"
                        android:visibility="gone"
                        android:textSize="16dp"/>

                    <View
                        android:layout_width="100dp"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:foregroundGravity="center"
                        android:layout_height="1dp"
                        android:background="@color/theme_color2"/>
                    <!--                    <TextView
                                            android:id="@+id/txt_forgot_password"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_marginTop="24dp"
                                            android:fontFamily="@font/intel"
                                            android:gravity="center"
                                            android:paddingTop="2dp"
                                            android:singleLine="true"
                                            android:text="@string/forgot_password"
                                            android:textColor="@color/theme_color"
                                            android:textSize="16sp" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_marginTop="6dp"
                                            android:fontFamily="@font/intel"
                                            android:gravity="center"
                                            android:paddingTop="2dp"
                                            android:singleLine="true"
                                            android:text="@string/or"
                                            android:textColor="@color/theme_color"
                                            android:textSize="16sp" />-->

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="24dp"
                        android:fontFamily="@font/intel"
                        android:gravity="center"
                        android:visibility="gone"
                        android:paddingTop="2dp"
                        android:singleLine="true"
                        android:text="@string/Do_not_have_an_account_already"
                        android:textColor="@color/gray_btn_bg_color"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/btn_sign_up"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/intel"
                        android:gravity="center"
                        android:paddingTop="2dp"
                        android:visibility="gone"
                        android:singleLine="true"
                        android:text="@string/register_now"
                        android:textColor="@color/theme_color"
                        android:textSize="16dp"
                        android:layout_marginBottom="@dimen/txt_15sp"/>


                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>