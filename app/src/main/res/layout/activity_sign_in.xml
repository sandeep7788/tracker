<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:black="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">




        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="4sp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.59000003">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="@dimen/txt_15sp"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.29000002">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:layout_marginStart="35sp"
                        android:layout_marginTop="90sp"
                        android:fontFamily="@font/intel"
                        android:foregroundGravity="center"
                        android:text="Welcome to"
                        android:textColor="@color/text_color"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:layout_marginStart="35sp"
                        android:fontFamily="@font/intel"
                        android:foregroundGravity="center"
                        android:text="@string/app_name"
                        android:textColor="@color/text_color"
                        android:textSize="32sp"
                        android:textStyle="bold" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:layout_marginStart="35sp"
                        android:layout_marginTop="25sp"
                        android:layout_marginBottom="4sp"
                        android:fontFamily="@font/intel"
                        android:foregroundGravity="center"
                        android:text="Name:"
                        android:textColor="@color/text_color"
                        android:textSize="14sp" />


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/l1"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:layout_marginStart="35sp"
                        android:layout_marginEnd="35sp"
                        android:background="@drawable/edit_txtbg"
                        android:clickable="true"
                        android:orientation="horizontal"
                        android:paddingTop="4sp"
                        android:paddingBottom="4sp">


                        <EditText
                            android:id="@+id/txt_username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16sp"
                            android:layout_marginEnd="16sp"
                            android:backgroundTint="@color/button_bg"
                            android:clickable="true"
                            android:fontFamily="@font/worksans_medium"
                            android:gravity="center|start"
                            android:hint="@string/username"
                            android:inputType="textPersonName"
                            android:maxLength="50"
                            android:textColor="@color/black"
                            android:textColorHint="@color/txt_hint"
                            android:textSize="@dimen/text_nev"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:layout_marginStart="35sp"
                        android:layout_marginTop="12sp"
                        android:layout_marginBottom="4sp"
                        android:fontFamily="@font/intel"
                        android:foregroundGravity="center"
                        android:text="A Number:"
                        android:textColor="@color/text_color"
                        android:textSize="14sp" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/l2"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:layout_marginStart="35sp"

                        android:layout_marginLeft="35sp"
                        android:layout_marginEnd="35sp"
                        android:background="@drawable/edit_txtbg"
                        android:clickable="true"
                        android:orientation="horizontal"
                        android:paddingTop="4sp"
                        android:paddingBottom="4sp">

                        <EditText
                            android:id="@+id/txtANumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16sp"
                            android:layout_marginEnd="16sp"
                            android:backgroundTint="@color/button_bg"
                            android:clickable="true"
                            android:fontFamily="@font/worksans_medium"
                            android:gravity="center|start"
                            android:hint="Enter your A number"
                            android:inputType="number"
                            android:maxLength="50"
                            android:textColor="@color/black"
                            android:textColorHint="@color/txt_hint"
                            android:textSize="@dimen/text_nev"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:layout_marginStart="35sp"
                        android:layout_marginTop="12sp"
                        android:layout_marginBottom="4sp"
                        android:fontFamily="@font/intel"
                        android:foregroundGravity="center"
                        android:text="BO Number:"
                        android:textColor="@color/text_color"
                        android:textSize="14sp" />


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/l3"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:layout_marginStart="35sp"
                        android:layout_marginLeft="35sp"
                        android:layout_marginEnd="35sp"
                        android:background="@drawable/edit_txtbg"
                        android:clickable="true"
                        android:orientation="horizontal"
                        android:paddingTop="4sp"
                        android:paddingBottom="4sp">

                        <EditText
                            android:id="@+id/txtBONumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16sp"
                            android:layout_marginLeft="16sp"
                            android:layout_marginEnd="36sp"
                            android:layout_marginRight="36sp"
                            android:backgroundTint="@color/button_bg"
                            android:clickable="true"
                            android:fontFamily="@font/worksans_medium"
                            android:hint="Enter your BO number"
                            android:inputType="number"
                            android:textColor="@color/black"
                            android:textColorHint="@color/txt_hint"
                            android:textSize="@dimen/text_nev"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:layout_marginStart="35sp"
                        android:layout_marginTop="12sp"
                        android:layout_marginBottom="4sp"
                        android:fontFamily="@font/intel"
                        android:foregroundGravity="center"
                        android:text="Mobile Number:"
                        android:textColor="@color/text_color"
                        android:textSize="14sp" />


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/l4"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:layout_marginStart="35sp"
                        android:layout_marginLeft="35sp"
                        android:layout_marginEnd="35sp"
                        android:background="@drawable/edit_txtbg"
                        android:clickable="true"
                        android:orientation="horizontal"
                        android:paddingTop="4sp"
                        android:paddingBottom="4sp">

                        <EditText
                            android:id="@+id/txtMobileNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16sp"
                            android:layout_marginLeft="16sp"
                            android:layout_marginEnd="36sp"
                            android:layout_marginRight="36sp"
                            android:backgroundTint="@color/button_bg"
                            android:clickable="true"
                            android:fontFamily="@font/worksans_medium"
                            android:hint="@string/mobileNumber"
                            android:inputType="number"
                            android:maxLength="10"
                            android:textColor="@color/black"
                            android:textColorHint="@color/txt_hint"
                            android:textSize="@dimen/text_nev"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_sign_in"
                        android:layout_width="match_parent"
                        android:layout_height="51sp"
                        android:layout_gravity="center"
                        android:layout_marginStart="36sp"
                        android:layout_marginTop="32sp"
                        android:layout_marginEnd="36sp"
                        android:background="@drawable/round_corner_shape"
                        android:backgroundTint="@color/theme_color2"
                        android:fontFamily="@font/intel"
                        android:text="SEND OTP"
                        android:textColor="@color/button_bg" />


                    <TextView
                        android:id="@+id/btn_privacyPolicy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="32sp"
                        android:fontFamily="@font/intel"
                        android:gravity="center|bottom"
                        android:paddingTop="2sp"
                        android:singleLine="true"
                        android:text="@string/privacyPolicy"
                        android:textColor="@color/theme_color"
                        android:textSize="16sp"
                        android:visibility="gone" />

                    <View
                        android:layout_width="100sp"
                        android:layout_height="1sp"
                        android:layout_gravity="center"
                        android:background="@color/theme_color2"
                        android:foregroundGravity="center"
                        android:visibility="gone" />
                    <!--                    <TextView
                                            android:id="@+id/txt_forgot_password"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_marginTop="24sp"
                                            android:fontFamily="@font/intel"
                                            android:gravity="center"
                                            android:paddingTop="2sp"
                                            android:singleLine="true"
                                            android:text="@string/forgot_password"
                                            android:textColor="@color/theme_color"
                                            android:textSize="16sp" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_marginTop="6sp"
                                            android:fontFamily="@font/intel"
                                            android:gravity="center"
                                            android:paddingTop="2sp"
                                            android:singleLine="true"
                                            android:text="@string/or"
                                            android:textColor="@color/theme_color"
                                            android:textSize="16sp" />-->

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="24sp"
                        android:fontFamily="@font/intel"
                        android:gravity="center"
                        android:paddingTop="2sp"
                        android:singleLine="true"
                        android:text="@string/Do_not_have_an_account_already"
                        android:textColor="@color/gray_btn_bg_color"
                        android:textSize="16sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/btn_sign_up"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/txt_15sp"
                        android:fontFamily="@font/intel"
                        android:gravity="center"
                        android:paddingTop="2sp"
                        android:singleLine="true"
                        android:text="@string/register_now"
                        android:textColor="@color/theme_color"
                        android:textSize="16sp"
                        android:visibility="gone" />


                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>